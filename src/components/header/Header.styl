$verticalMiddle() {
  display inline-block
  vertical-align middle
}

.monkeyHeaderContainer {
  height 50px
  color #333
  background-color #fff
  box-shadow 0px 1px 10px 1px rgba(0, 0, 0, .05)
}

.monkeyHeader {
  width 1200px
  height inherit
  margin 0 auto
}

.monkeyHeaderLogo {
  $verticalMiddle()
  width 100px
  height inherit
  background-image url("../../assets/img/logo.png")
  background-repeat no-repeat
  background-position center center
  background-size auto 28px
}

.monkeyHeaderMenu {
  $verticalMiddle()
  padding-left 80px
  line-height 50px
}

.headerMenuItem {
  $verticalMiddle()
  font-size 14px
  color #333
  &:hover {
    color #E26A6A
  }
  &:first-child {
    padding-right 40px
  }
}

:global(.active-header-menu-item) {
  font-weight 500
  color #E26A6A
}

.monkeyHeaderUser {
  float right
}
.headerUserIcon {
  display block
  width 32px
  height 32px
  margin-top 9px
  background-image url("../../assets/img/user-icon-test.jpg")
  background-repeat no-repeat
  background-position center center
  background-size contain
  border-radius 50%
}
.headerUserMenu {
  padding 8px 14px 12px
  top 52px
  right 0
  &:before {
    right 8px
  }
}

.header-user-menu .user-setting, .header-user-menu .user-email {
  font-size 13px
}

.headerUserEmail {
  font-size 13px
  padding-bottom 12px
  color #666
}

.headerUserSetting {
  & i, & span {
    $verticalMiddle()
  }
  & i {
    padding-right 4px
  }
  & a {
    color #333
    &:hover {
      color #E26A6A
    }
    &:nth-child(2) {
      text-align center
    }
  }
}