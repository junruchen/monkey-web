$verticalMiddle() {
  display inline-block
  vertical-align middle
}

$projectAnalysisCard() {
  $verticalMiddle()
  background #fff
  border 1px solid #E5E8EB
  border-radius 4px
  box-shadow 0 1px 10px 1px rgba(0, 0, 0, .05)
  box-sizing border-box
}

$chartIconBox() {
  $verticalMiddle()
  position relative
  overflow hidden
  width 32px
  height 32px
  margin-top 7px
  border-radius 50%
  & i {
    position absolute
    z-index 1
    top 50%
    left 50%
    transform translate(-50%, -50%)
    font-size 16px
    color #fff
  }
  &:before, &:after {
    position absolute
    z-index 0
    content ''
    width 32px
    height 32px
    border-radius 50%
  }
  &:before {
    right 12px
    bottom 14px
  }
  &:after {
    left 6px
    bottom 12px
  }
}

.projectDetailBox {
  $verticalMiddle()
  box-sizing border-box
  margin 25px 0 30px
  width 350px
  height 170px
  padding 10px 15px 0
  background #fff
  border 1px solid #E5E8EB
  border-radius 4px
  box-shadow 0 1px 10px 1px rgba(0, 0, 0, .05)
}

.projectTitle {
  position relative
  margin-bottom 24px
  &:before {
    position absolute
    content ''
    width 2px
    height 24px
    top 50%
    margin-top -12px
    left -15px
    background #E26A6A
  }
}

.projectImageBox {
  $verticalMiddle()
  width 150px
  padding-top 60px
  text-align center
  background-repeat no-repeat
  background-position center top
  background-size 120px auto
}

.projectDetail {
  $verticalMiddle()
  width 160px
  padding-left 8px
  & h6 {
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    padding-bottom 5px
    font-size 13px
    &:last-child {
      padding-bottom 0
    }
  }
  & span, & i {
    display inline-block
    vertical-align middle
  }
  & span {
    padding-left 10px
  }
}

.projectAnalysisBox {
  $verticalMiddle()
  width 750px
  padding-left 30px
  box-sizing border-box
  margin 25px 0 30px
}

.apiSummary {
  $projectAnalysisCard()
  width 230px
  height 60px
  margin-left 15px

  padding 7px 16px 0
  &:first-child {
    margin-left 0
  }
}

.apiChart {
  $projectAnalysisCard()
  width 350px
  height 90px
  margin-top 20px
  background linear-gradient(90deg, #fff 138px, transparent 0)
  background-color #61A0F0
  &:last-child {
    margin-left 20px
    background-color #55BD87
  }
}

.firstIconBox {
  $chartIconBox()
  background #E26A6A
  &:before {
    background rgba(#FAD7D7, .5)
  }
  &:after {
    background rgba(#F9A4A4, .5)
  }
}

.secondIconBox {
  $chartIconBox()
  background #F9AD37
  &:before {
    background rgba(#FCDFB1, .5)
  }
  &:after {
    background rgba(#F7C16F, .5)
  }
}

.thirdIconBox {
  $chartIconBox()
  background #AE4DFF
  &:before {
    background rgba(#E0C3F8, .5)
  }
  &:after {
    background rgba(#B081D8, .5)
  }
}

.countBox {
  $verticalMiddle()
  padding-left 10px
  & h6 {
    color #666
  }
}

.apiChartBox {
  $verticalMiddle()
  position relative
  width 210px
  height 100%
  & > div {
    position absolute
    width 100%
    height 60px
    left 0
  }
}

.apiChartBoxCount {
  $verticalMiddle()
  width 138px
  box-sizing border-box
  padding 15px 0 15px 16px
}

.chartTitle {
  font-size 13px
  color #666
  & strong {
    color #333
  }
}

.chartRate {
  font-size 0
  padding-top 2px
  color #E26A6A
  & span, & i {
    $verticalMiddle()
  }
  & span {
    font-size 15px
  }
  & i {
    font-size 14px
  }
}

.isGrowth {
  transform rotate(180deg)
}

:global .api-base-chart {
  bottom 0
}

:global .api-line-chart {
  bottom 10px
}

.subContentBox {
  width 100%
  height 560px
  background #fff
  border 1px solid #E5E8EB
  border-radius 4px
  box-shadow 0px 1px 10px 1px rgba(0, 0, 0, .05)
}

.subTitleBox {
  height 36px
  font-size 14px
  background #E5E8EB
}

.subTitle {
  position relative
  display inline-block
  vertical-align middle
  color #666666
  padding 0 25px
  line-height 36px
  border-radius 4px 4px 0 0
  &:hover {
    color #333
  }
  &:before {
    position absolute
    content ''
    width 2px
    height 18px
    background transparent
    top 50%
    margin-top -9px
    left 0
  }
}
:global .activeSubTitle {
  color #333
  background #FFFFFF
  &:before {
    background #E26A6A
  }
}