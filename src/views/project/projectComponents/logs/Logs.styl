.new-project-box {
  width 620px
  margin 25px auto
  padding 24px 42px 30px
  box-sizing border-box
  background #fff
  border 1px solid #E5E8EB
  border-radius 4px
  box-shadow 0 1px 10px 1px rgba(0, 0, 0, .05)
  & .title-box {
    padding-bottom 2px
    border-bottom 1px solid #B1AFAF
    & .title-des {
      color #666666
      padding-top 4px
    }
  }
  & .form-box {
    padding-top 15px
  }
  & .btn-group {
    padding-top 18px
  }
}

.form-item {
  width 260px
  padding-bottom 12px
  &.textarea-form-item {
    width 100%
  }
  /*&.error {
    & input, & textarea {
      border-color #E26A6A
    }
  }*/
  & label {
    display block
    font-size 13px
    padding-bottom 5px
  }
  & .label-des {
    padding-left 5px
    font-size 12px
    color #666666
    &.mark {
      color #E26A6A
    }
  }
  & input, & textarea {
    color #333
    padding 7px 12px
  }
  /*& .error-des {
    color #E26A6A
  }*/
}

.image-form-item {
  & .image-box, & .text-btn {
    display inline-block
    vertical-align bottom
  }
  & .image-box {
    width 100px
    height 100px
    box-sizing border-box
    border 1px solid #DCDFE6
    border-radius 4px
    background-image url("../../assets/img/logo.png")
    background-repeat no-repeat
    background-position center center
    background-size contain
  }
  & .text-btn {
    margin-left 10px
  }
}