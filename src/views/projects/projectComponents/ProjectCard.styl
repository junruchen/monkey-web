$verticalMiddle() {
  display inline-block
  vertical-align middle
}

.projectItem {
  width 260px
  display inline-block
  box-sizing border-box
  padding 30px 15px 12px
  margin-right 20px
  margin-bottom 20px
  font-size 13px
  text-align center
  background #fff
  border 1px solid #E5E8EB
  border-radius 4px
  cursor pointer
  &:nth-child(4n) {
    margin-right 0px
  }
  &:hover {
    box-shadow 0 1px 10px 1px rgba(0, 0, 0, .10)
  }
}

.projectLogo {
  width 120px
  height 60px
  margin 0 auto
  background-image url("../../../assets/img/logo.png")
  background-position center center
  background-repeat no-repeat
  background-size contain
}

.projectContext {
  padding 3px 0 8px
  font-weight 500
}

.projectInfo {
  padding-top 22px
  text-align left
  & > h6 {
    $verticalMiddle()
    font-size 13px
    &:nth-child(2) {
      padding-left 10px
    }
    & span, & i {
      $verticalMiddle()
    }
    & i {
      color #E26A6A
      padding-right 4px
    }
  }
}

.projectCtime {
  padding-top 2px
  float right
  font-size 12px
  color #666
}